@model U23593963_HW03.Models.HomeViewModel

@{
    ViewBag.Title = "Home - Bike Store Management";
}

<style>
    :root {
        --primary-color: #3498db;
        --secondary-color: #2c3e50;
        --accent-color: #e74c3c;
        --light-bg: #ecf0f1;
        --card-bg: #ffffff;
        --text-dark: #2c3e50;
        --text-light: #7f8c8d;
        --border-color: #bdc3c7;
        --success-color: #27ae60;
        --warning-color: #f39c12;
        --danger-color: #e74c3c;
    }

    body {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        padding-bottom: 20px;
    }

    .section-container {
        display: flex;
        gap: 20px;
        margin-bottom: 20px;
    }

    .section-box {
        flex: 1;
        border: 2px solid var(--border-color);
        padding: 20px;
        background: var(--card-bg);
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .section-box:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        }

        .section-box h4 {
            margin-top: 0;
            margin-bottom: 20px;
            padding-bottom: 10px;
            border-bottom: 2px solid var(--primary-color);
            color: var(--secondary-color);
            font-weight: 600;
        }

    .form-row {
        display: flex;
        gap: 10px;
        margin-bottom: 12px;
        align-items: center;
    }

        .form-row label {
            flex: 0 0 100px;
            font-weight: 600;
            margin: 0;
            color: var(--text-dark);
        }

        .form-row input,
        .form-row select {
            flex: 1;
            border: 1px solid var(--border-color);
            border-radius: 5px;
            padding: 6px 10px;
            font-size: 14px;
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }

            .form-row input:focus,
            .form-row select:focus {
                outline: none;
                border-color: var(--primary-color);
                box-shadow: 0 0 0 2px rgba(52, 152, 219, 0.2);
            }

    .list-box {
        border: 1px solid var(--border-color);
        padding: 10px;
        min-height: 150px;
        max-height: 200px;
        overflow-y: auto;
        background: var(--light-bg);
        margin-top: 10px;
        border-radius: 5px;
    }

        .list-box ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .list-box li {
            padding: 8px 0;
            border-bottom: 1px solid var(--border-color);
            cursor: pointer;
            transition: background-color 0.2s ease;
            color: var(--text-dark);
        }

            .list-box li:hover {
                background: rgba(52, 152, 219, 0.1);
            }

            .list-box li.selected {
                background: rgba(52, 152, 219, 0.2);
                border-left: 3px solid var(--primary-color);
            }

    .pagination {
        display: flex;
        gap: 5px;
        margin-top: 10px;
        justify-content: flex-start;
        flex-wrap: wrap;
    }

        .pagination button {
            padding: 5px 10px;
            border: 1px solid var(--border-color);
            background: var(--card-bg);
            cursor: pointer;
            min-width: 35px;
            border-radius: 3px;
            transition: all 0.3s ease;
            color: var(--text-dark);
        }

            .pagination button:hover:not(:disabled) {
                background: var(--primary-color);
                color: white;
                border-color: var(--primary-color);
            }

            .pagination button.active {
                background: var(--primary-color);
                color: white;
                border-color: var(--primary-color);
            }

            .pagination button:disabled {
                opacity: 0.5;
                cursor: not-allowed;
                background: var(--light-bg);
            }

    .action-buttons {
        display: flex;
        gap: 10px;
        margin-top: 20px;
    }

    .btn {
        border-radius: 5px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background: var(--primary-color);
        border-color: var(--primary-color);
    }

    .btn-secondary {
        background: var(--secondary-color);
        border-color: var(--secondary-color);
    }

    .product-section {
        display: flex;
        gap: 20px;
    }

    .product-left {
        flex: 1;
    }

    .product-details {
        margin-bottom: 20px;
    }

    .product-image {
        border: 1px solid var(--border-color);
        height: 200px;
        width: 200px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--light-bg);
        overflow: hidden;
        border-radius: 8px;
    }

        .product-image img {
            max-width: 100%;
            max-height: 100%;
            object-fit: contain;
        }

        .product-image .placeholder-text {
            color: var(--text-light);
            font-style: italic;
        }

    .filter-section {
        display: flex;
        gap: 10px;
        align-items: center;
        margin-bottom: 15px;
        padding: 10px;
        background: var(--light-bg);
        border-radius: 5px;
    }

        .filter-section label {
            font-weight: 600;
            color: var(--text-dark);
            margin: 0;
        }

    .page-info {
        font-size: 12px;
        color: var(--text-light);
        margin-top: 5px;
        font-weight: 500;
    }

    .product-info-row {
        display: flex;
        gap: 10px;
        margin-bottom: 10px;
        align-items: center;
    }

        .product-info-row label {
            flex: 0 0 100px;
            font-weight: 600;
            color: var(--text-dark);
            margin: 0;
        }

        .product-info-row span {
            flex: 1;
            color: var(--text-dark);
            padding: 4px 0;
        }

    .product-list {
        margin-top: 15px;
        border: 1px solid var(--border-color);
        padding: 10px;
        background: var(--light-bg);
        max-height: 150px;
        overflow-y: auto;
        border-radius: 5px;
    }

        .product-list ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .product-list li {
            padding: 8px 0;
            border-bottom: 1px solid var(--border-color);
            cursor: pointer;
            transition: background-color 0.2s ease;
            color: var(--text-dark);
        }

            .product-list li:hover {
                background: rgba(52, 152, 219, 0.1);
            }

            .product-list li.selected {
                background: rgba(52, 152, 219, 0.2);
                border-left: 3px solid var(--primary-color);
            }

    .alert {
        padding: 12px 15px;
        margin-bottom: 20px;
        border: 1px solid transparent;
        border-radius: 8px;
        font-weight: 500;
    }

    .alert-success {
        color: var(--success-color);
        background-color: rgba(39, 174, 96, 0.1);
        border-color: rgba(39, 174, 96, 0.3);
    }

    .alert-danger {
        color: var(--danger-color);
        background-color: rgba(231, 76, 60, 0.1);
        border-color: rgba(231, 76, 60, 0.3);
    }

    h2 {
        color: white;
        text-align: center;
        margin-bottom: 20px;
        font-weight: 700;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
    }

    /* Modal enhancements */
    .modal-header {
        background: var(--primary-color);
        color: white;
        border-bottom: none;
        border-radius: 8px 8px 0 0;
    }

    .modal-title {
        font-weight: 600;
    }

    .btn-close {
        filter: invert(1);
    }

    .form-control, .form-select {
        border: 1px solid var(--border-color);
        border-radius: 5px;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

        .form-control:focus, .form-select:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 2px rgba(52, 152, 219, 0.2);
        }
</style>

