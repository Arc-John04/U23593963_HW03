@model U23593963_HW03.Models.ReportViewModel

@{
    ViewBag.Title = "Reports";
}

<!-- Include required libraries - ONLY WITHIN SCOPE -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>

<div class="container-fluid mt-4">
    <h2>@ViewBag.Title</h2>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-@(TempData["MessageType"] ?? "info") alert-dismissible fade show" role="alert">
            @TempData["Message"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <!-- Report Generation Section -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h4><i class="glyphicon glyphicon-stats"></i> Generate Report</h4>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("GenerateReport", "Report", FormMethod.Post, new { @class = "form-inline" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-group mr-3 mb-2">
                    <label for="reportType" class="mr-2"><strong>Report Type:</strong></label>
                    @Html.DropDownList("reportType", Model.ReportTypes, new { @class = "form-control" })
                </div>
                <button type="submit" class="btn btn-success mb-2">
                    <i class="glyphicon glyphicon-refresh"></i> Generate Report
                </button>
            }
        </div>
    </div>

    <!-- Report Display Section -->
    @if (!string.IsNullOrEmpty(Model.ReportTitle))
    {
        <div class="card mb-4">
            <div class="card-header bg-info text-white">
                <h4><i class="glyphicon glyphicon-file"></i> @Model.ReportTitle</h4>
            </div>
            <div class="card-body">
                <!-- Chart Display -->
                <div class="row mb-4">
                    <div class="col-md-12">
                        <div class="chart-container" style="position: relative; height:400px; width:100%">
                            <canvas id="reportChart"></canvas>
                        </div>
                    </div>
                </div>

                <!-- Report Data Summary -->
                <div class="row mb-4">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header bg-light">
                                <h5><i class="glyphicon glyphicon-list-alt"></i> Report Summary</h5>
                            </div>
                            <div class="card-body">
                                <div id="reportSummary" class="table-responsive">
                                    <!-- Summary will be populated by JavaScript -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Save Report Section -->
                <div class="card bg-light">
                    <div class="card-body">
                        <h5><i class="glyphicon glyphicon-floppy-disk"></i> Save Report</h5>
                        @using (Html.BeginForm("SaveReport", "Report", FormMethod.Post, new { id = "saveReportForm" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-row">
                                <div class="col-md-4 mb-3">
                                    <label for="fileName" class="font-weight-bold">Filename:</label>
                                    <input type="text" id="fileName" name="fileName" class="form-control"
                                           placeholder="Enter filename (e.g., monthly_sales_report)" required />
                                    <small class="form-text text-muted">Do not include file extension</small>
                                </div>
                                <div class="col-md-3 mb-3">
                                    <label for="fileType" class="font-weight-bold">File Type:</label>
                                    <select id="fileType" name="fileType" class="form-control">
                                        <option value="pdf">PDF Document</option>
                                        <option value="html">HTML Report</option>
                                    </select>
                                </div>
                                <div class="col-md-2 mb-3">
                                    <label class="font-weight-bold">Actions:</label>
                                    <div>
                                        <button type="button" id="previewReport" class="btn btn-outline-primary btn-sm">
                                            <i class="glyphicon glyphicon-eye-open"></i> Preview
                                        </button>
                                        <button type="button" id="downloadReport" class="btn btn-outline-success btn-sm">
                                            <i class="glyphicon glyphicon-download"></i> Download
                                        </button>
                                    </div>
                                </div>
                            </div>

                            <!-- BONUS: Resizable Text Box for Description -->
                            <div class="form-row mt-3">
                                <div class="col-md-12">
                                    <label for="description" class="font-weight-bold">
                                        <i class="glyphicon glyphicon-pencil"></i> Report Description
                                        <span class="badge badge-warning">BONUS Feature</span>
                                    </label>
                                    <textarea id="description" name="description" class="form-control resizable-textarea"
                                              placeholder="Enter a detailed description of this report... (This resizable textarea meets the bonus requirement)"
                                              rows="4"></textarea>
                                    <small class="form-text text-muted">
                                        Drag the bottom-right corner to resize. This description will be saved with your report.
                                    </small>
                                </div>
                            </div>

                            <div class="form-row mt-4">
                                <div class="col-md-12">
                                    <button type="submit" class="btn btn-primary btn-lg">
                                        <i class="glyphicon glyphicon-save"></i> Save Report with Description
                                    </button>
                                    <button type="button" id="clearForm" class="btn btn-outline-secondary btn-lg">
                                        <i class="glyphicon glyphicon-erase"></i> Clear Form
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Document Archive Section -->
    <div class="card">
        <div class="card-header bg-secondary text-white">
            <h4><i class="glyphicon glyphicon-folder-open"></i> Document Archive</h4>
        </div>
        <div class="card-body">
            @if (Model.SavedReports != null && Model.SavedReports.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead class="thead-dark">
                            <tr>
                                <th>Filename</th>
                                <th>File Type</th>
                                <th>Date Saved</th>
                                <th>File Size</th>
                                <th>Description</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var report in Model.SavedReports)
                            {
                                <tr>
                                    <td class="font-weight-bold">@report.FileName</td>
                                    <td>
                                        <span class="badge badge-info">@report.FileType.ToUpper()</span>
                                    </td>
                                    <td>@report.CreatedDate.ToString("yyyy-MM-dd HH:mm")</td>
                                    <td><span class="badge badge-light">@report.FileSize</span></td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(report.Description))
                                        {
                                            <div class="report-description" title="@report.Description">
                                                @if (report.Description.Length > 100)
                                                {
                                                    @report.Description.Substring(0, 100)<text>...</text>
                                                }
                                                else
                                                {
                                                    @report.Description
                                                }
                                            </div>
                                        }
                                        else
                                        {
                                            <em class="text-muted">No description provided</em>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            @using (Html.BeginForm("DownloadReport", "Report", FormMethod.Get, new { style = "display:inline;" }))
                                            {
                                                <input type="hidden" name="fileName" value="@report.FileName" />
                                                <button type="submit" class="btn btn-success" title="Download Report">
                                                    <i class="glyphicon glyphicon-download"></i>
                                                </button>
                                            }
                                            <button type="button" class="btn btn-info view-description"
                                                    data-description="@report.Description"
                                                    data-filename="@report.FileName"
                                                    title="View Full Description">
                                                <i class="glyphicon glyphicon-eye-open"></i>
                                            </button>
                                            @using (Html.BeginForm("DeleteReport", "Report", FormMethod.Post, new { style = "display:inline;" }))
                                            {
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="fileName" value="@report.FileName" />
                                                <button type="submit" class="btn btn-danger"
                                                        onclick="return confirm('Are you sure you want to delete the report \" @report.FileName \"?');"
                                                        title="Delete Report">
                                                    <i class="glyphicon glyphicon-trash"></i>
                                                </button>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="mt-3">
                    <span class="text-muted">
                        <i class="glyphicon glyphicon-info-sign"></i>
                        Showing @Model.SavedReports.Count saved report(s)
                    </span>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="glyphicon glyphicon-inbox" style="font-size: 48px; color: #6c757d;"></i>
                    <h5 class="text-muted mt-3">No saved reports available</h5>
                    <p class="text-muted">Generate and save reports to see them here.</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Description Modal -->
<div class="modal fade" id="descriptionModal" tabindex="-1" role="dialog" aria-labelledby="descriptionModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="descriptionModalLabel">Report Description</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p><strong>File:</strong> <span id="modalFileName"></span></p>
                <div class="description-content p-3 bg-light rounded">
                    <span id="modalDescription"></span>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Chart data from model
        var chartData = @Html.Raw(Json.Encode(Model));

        $(document).ready(function () {
            initializeChart();
            initializeEventHandlers();
        });

        function initializeChart() {
            var ctx = document.getElementById('reportChart').getContext('2d');
            var data = getChartData();

            if (!data) {
                $('#reportChart').closest('.chart-container').html(
                    '<div class="alert alert-info text-center">No chart data available for the selected report.</div>'
                );
                return;
            }

            var myChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: data.labels,
                    datasets: [{
                        label: chartData.ReportTitle,
                        data: data.values,
                        backgroundColor: generateColors(data.values.length),
                        borderColor: 'rgba(54, 162, 235, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                callback: function(value) {
                                    return formatNumber(value);
                                }
                            }
                        }
                    },
                    plugins: {
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return context.dataset.label + ': ' + formatNumber(context.parsed.y);
                                }
                            }
                        }
                    }
                }
            });

            // Update report summary
            updateReportSummary(data);
        }

        function getChartData() {
            if (!chartData) return null;

            var dataPoints = chartData.SalesByMonth ||
                           chartData.TopProducts ||
                           chartData.StockStatus ||
                           chartData.CustomerPerformance ||
                           chartData.StaffPerformance ||
                           chartData.StorePerformance;

            if (!dataPoints || dataPoints.length === 0) return null;

            return {
                labels: dataPoints.map(function(item) { return item.Label; }),
                values: dataPoints.map(function(item) { return item.Value; })
            };
        }

        function generateColors(count) {
            var colors = [];
            var baseColors = [
                'rgba(54, 162, 235, 0.7)',
                'rgba(255, 99, 132, 0.7)',
                'rgba(75, 192, 192, 0.7)',
                'rgba(255, 159, 64, 0.7)',
                'rgba(153, 102, 255, 0.7)',
                'rgba(255, 205, 86, 0.7)',
                'rgba(201, 203, 207, 0.7)',
                'rgba(0, 128, 0, 0.7)',
                'rgba(128, 0, 128, 0.7)',
                'rgba(128, 128, 0, 0.7)'
            ];

            for (var i = 0; i < count; i++) {
                colors.push(baseColors[i % baseColors.length]);
            }
            return colors;
        }

        function formatNumber(value) {
            if (value >= 1000000) {
                return (value / 1000000).toFixed(1) + 'M';
            } else if (value >= 1000) {
                return (value / 1000).toFixed(1) + 'K';
            }
            return value.toLocaleString();
        }

        function updateReportSummary(data) {
            var summaryHtml = '';

            if (data && data.values.length > 0) {
                var total = data.values.reduce((a, b) => a + b, 0);
                var average = total / data.values.length;
                var maxValue = Math.max(...data.values);
                var minValue = Math.min(...data.values);

                summaryHtml = `
                    <table class="table table-bordered">
                        <thead>
                            <tr class="bg-light">
                                <th>Metric</th>
                                <th>Value</th>
                                <th>Details</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><strong>Total Items</strong></td>
                                <td class="text-success font-weight-bold">${data.values.length}</td>
                                <td>Number of data points in report</td>
                            </tr>
                            <tr>
                                <td><strong>Total Value</strong></td>
                                <td class="text-primary font-weight-bold">${formatNumber(total)}</td>
                                <td>Sum of all values</td>
                            </tr>
                            <tr>
                                <td><strong>Average</strong></td>
                                <td class="text-info font-weight-bold">${formatNumber(average)}</td>
                                <td>Average value per item</td>
                            </tr>
                            <tr>
                                <td><strong>Highest</strong></td>
                                <td class="text-success font-weight-bold">${formatNumber(maxValue)}</td>
                                <td>Maximum value in dataset</td>
                            </tr>
                            <tr>
                                <td><strong>Lowest</strong></td>
                                <td class="text-warning font-weight-bold">${formatNumber(minValue)}</td>
                                <td>Minimum value in dataset</td>
                            </tr>
                        </tbody>
                    </table>
                `;
            } else {
                summaryHtml = '<div class="alert alert-warning">No summary data available.</div>';
            }

            $('#reportSummary').html(summaryHtml);
        }

        function initializeEventHandlers() {
            // Clear form button
            $('#clearForm').click(function() {
                $('#fileName').val('');
                $('#description').val('');
                $('#fileName').focus();
            });

            // Preview report button
            $('#previewReport').click(function() {
                var fileName = $('#fileName').val();
                if (!fileName) {
                    alert('Please enter a filename first.');
                    return;
                }
                alert('Preview functionality would open a preview window for: ' + fileName);
                // In real implementation, this would open a preview modal or window
            });

            // Download report button
            $('#downloadReport').click(function() {
                var fileName = $('#fileName').val();
                if (!fileName) {
                    alert('Please enter a filename first.');
                    return;
                }
                // This would trigger the PDF generation and download
                generateAndDownloadPDF();
            });

            // View description in modal
            $('.view-description').click(function() {
                var description = $(this).data('description');
                var fileName = $(this).data('filename');

                $('#modalFileName').text(fileName);
                if (description && description.trim() !== '') {
                    $('#modalDescription').text(description);
                } else {
                    $('#modalDescription').html('<em class="text-muted">No description provided for this report.</em>');
                }

                $('#descriptionModal').modal('show');
            });

            // Form submission enhancement
            $('#saveReportForm').submit(function(e) {
                var fileName = $('#fileName').val();
                if (!fileName) {
                    e.preventDefault();
                    alert('Please enter a filename.');
                    $('#fileName').focus();
                    return false;
                }

                // Add loading state
                var submitBtn = $(this).find('button[type="submit"]');
                var originalText = submitBtn.html();
                submitBtn.html('<i class="glyphicon glyphicon-hourglass"></i> Saving...').prop('disabled', true);

                // Re-enable after 3 seconds if still processing
                setTimeout(function() {
                    submitBtn.html(originalText).prop('disabled', false);
                }, 3000);
            });
        }

        function generateAndDownloadPDF() {
            // This would integrate with pdfmake to generate and download the PDF
            var fileName = $('#fileName').val() || 'report';
            var description = $('#description').val();

            var docDefinition = {
                content: [
                    { text: chartData.ReportTitle, style: 'header' },
                    { text: 'Generated on: ' + new Date().toLocaleString(), style: 'subheader' },
                    { text: '\n' },
                    {
                        text: 'Description:',
                        style: 'descriptionLabel'
                    },
                    {
                        text: description || 'No description provided.',
                        style: 'description'
                    },
                    { text: '\n' },
                    {
                        text: 'This is a placeholder for the actual report content.',
                        style: 'content'
                    }
                ],
                styles: {
                    header: {
                        fontSize: 18,
                        bold: true,
                        alignment: 'center',
                        margin: [0, 0, 0, 10]
                    },
                    subheader: {
                        fontSize: 12,
                        alignment: 'center',
                        margin: [0, 0, 0, 10]
                    },
                    descriptionLabel: {
                        fontSize: 14,
                        bold: true,
                        margin: [0, 10, 0, 5]
                    },
                    description: {
                        fontSize: 11,
                        margin: [0, 0, 0, 10],
                        italics: true
                    },
                    content: {
                        fontSize: 12,
                        margin: [0, 20, 0, 0]
                    }
                }
            };

            // Generate and download PDF
            pdfMake.createPdf(docDefinition).download(fileName + '.pdf');
        }
    </script>

    <style>
        .resizable-textarea {
            resize: both;
            min-height: 120px;
            max-height: 400px;
            min-width: 100%;
            transition: border-color 0.3s ease;
        }

            .resizable-textarea:focus {
                border-color: #007bff;
                box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
            }

        .report-description {
            max-height: 60px;
            overflow: hidden;
            border: 1px solid #e9ecef;
            padding: 6px;
            border-radius: 4px;
            background-color: #f8f9fa;
            font-size: 0.85em;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .report-description:hover {
                background-color: #e9ecef;
            }

        .description-content {
            max-height: 300px;
            overflow-y: auto;
            border: 1px solid #dee2e6;
        }

        .chart-container {
            background: #f8f9fa;
            border: 1px solid #dee2e6;
            border-radius: 4px;
            padding: 20px;
        }

        .card-header h4 {
            margin: 0;
            font-size: 1.25rem;
        }

        .badge-warning {
            background-color: #ffc107;
            color: #212529;
        }
    </style>
}